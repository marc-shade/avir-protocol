{
  "avir_version": "1.0.0",
  "metadata": {
    "name": "Memory System Verification",
    "description": "AVIR specification for verifying AI memory system performance",
    "author": "2 Acre Studios",
    "created": "2025-01-01T00:00:00Z",
    "tags": ["memory", "ai", "performance"]
  },
  "system": {
    "name": "enhanced-memory-mcp",
    "version": "1.0.0",
    "description": "4-tier AI memory system with RAG capabilities",
    "repository": "https://github.com/marcshade/enhanced-memory-mcp"
  },
  "benchmarks": [
    {
      "id": "memory_entity_creation",
      "description": "Rate of creating new memory entities",
      "methodology": "measure",
      "target": 435,
      "unit": "ops/s",
      "tolerance": 0.20,
      "runs": 5
    },
    {
      "id": "semantic_search",
      "description": "Vector similarity search operations per second",
      "methodology": "measure",
      "target": 81,
      "unit": "ops/s",
      "tolerance": 0.20,
      "runs": 5
    },
    {
      "id": "memory_promotion",
      "description": "Rate of promoting memories between tiers",
      "methodology": "measure",
      "target": 6.4,
      "unit": "ops/s",
      "tolerance": 0.20,
      "runs": 5
    },
    {
      "id": "task_decomposition",
      "description": "Time to decompose a complex task into subtasks",
      "methodology": "measure",
      "target": 1200,
      "unit": "ms",
      "tolerance": 0.25,
      "lower_is_better": true,
      "runs": 5
    },
    {
      "id": "baton_handoff",
      "description": "Time to transfer context between agents",
      "methodology": "measure",
      "target": 89,
      "unit": "ms",
      "tolerance": 0.50,
      "lower_is_better": true,
      "runs": 5
    }
  ],
  "capabilities": [
    {
      "name": "vector_search",
      "description": "Semantic vector similarity search",
      "category": "memory",
      "benchmarks": ["semantic_search"]
    },
    {
      "name": "memory_tiers",
      "description": "4-tier memory architecture (working, episodic, semantic, procedural)",
      "category": "memory",
      "benchmarks": ["memory_entity_creation", "memory_promotion"]
    },
    {
      "name": "task_coordination",
      "description": "Task decomposition and agent coordination",
      "category": "coordination",
      "benchmarks": ["task_decomposition", "baton_handoff"]
    }
  ],
  "requirements": {
    "min_iterations": 3,
    "pass_threshold": 0.8,
    "outlier_removal": true,
    "min_providers": 2
  },
  "cross_verification": {
    "enabled": true,
    "blinding_mode": "double_blind",
    "exclude_self_verification": true
  }
}
